<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEE9E9" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Coleta de Trajetórias"
        android:textColor="#1C1C1C"
        android:textSize="38dp" 
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/gridGps"
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="520dp"
            android:layout_height="275dp" >

            <ImageView
                android:id="@+id/rectgps"
                android:layout_width="fill_parent"
                android:layout_height="255dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/rectangle" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblInfoGps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-280dp"
            android:background="#EEE9E9"
            android:text=" Informações do GPS "
            android:textColor="#1C1C1C"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/lblLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:text="Longitude"
            android:textColor="#696969"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="-35dp"
            android:text="Sem Informação"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Latitude"
            android:textColor="#696969"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="-35dp"
            android:text="Sem Informação"
            android:textSize="28sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/lblAltitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Altitude"
            android:textColor="#696969"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAltitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="-35dp"
            android:text="Sem Informação"
            android:textSize="28sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/lblSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Velocidade"
            android:textColor="#696969"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="-35dp"
            android:text="Sem Informação"
            android:textSize="28sp"
            android:textStyle="bold" />
        

    </LinearLayout>

    <LinearLayout
        android:layout_width="520dp"
        android:id="@+id/gridAcel"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_below="@+id/gridGps"
        android:layout_marginTop="-190dp" >

        <LinearLayout
            android:layout_width="520dp"
            android:layout_height="250dp" >

            <ImageView
                android:id="@+id/rectacel"
                android:layout_width="fill_parent"
                android:layout_height="210dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/rectangle" />
        </LinearLayout>

    <TextView
        android:id="@+id/lblInfoAcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EEE9E9"
        android:text=" Informações do Acelerômetro "
        android:layout_marginTop="-255dp"
        android:layout_marginLeft="20dp"
        android:textColor="#1C1C1C"
        android:textSize="30sp" /> 
        
        <TextView
            android:id="@+id/lblAcelX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Eixo X"
            android:textColor="#696969"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAcelX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="-35dp"
            android:text="Sem Informação"
            android:textSize="28sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/lblAcelY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Eixo Y"
            android:textColor="#696969"
            android:layout_marginTop="15dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAcelY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="-35dp"
            android:text="Sem Informação"
            android:textSize="28sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/lblAcelZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Eixo Z"
            android:textColor="#696969"
            android:layout_marginTop="15dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAcelZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:layout_marginTop="-35dp"
            android:text="Sem Informação"
            android:textSize="28sp"
            android:textStyle="bold" />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gridObs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridAcel"
        android:layout_marginTop="-170dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>
        
	    <TextView
	        android:id="@+id/txtObsTrue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Coletando Coordenadas !"
	        android:textColor="#008B00"
	        android:textSize="20sp"
	        android:visibility="invisible" />
	    
	    <TextView
	        android:id="@+id/txtObs"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="As informações não estão sendo salvas, clique em Iniciar."
	        android:textColor="#B22222"
	        android:layout_marginTop="-29dp"
	        android:textSize="20sp"
	        android:visibility="visible" />
	    
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gridButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridObs"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>
	
       <Button
	        android:id="@+id/btnGps"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_selector_g"
	        android:text="Iniciar Coleta"
	        android:textSize="30dp"
	        android:textColor="#ffffff"
	        android:visibility="visible" />
       
	    <Button
	        android:id="@+id/btnGpsSair"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_selector_r"
	        android:text="Parar Coleta"
	        android:layout_marginTop="-62dp"
	        android:textSize="30dp"
	        android:textColor="#ffffff"
	        android:visibility="invisible" />
	        
    </LinearLayout>

</RelativeLayout>